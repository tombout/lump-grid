{
  "name": "lump-grid",
  "version": "1.0.1",
  "description": "CSS Grid Module",
  "main": "gulpfile.js",
  "scripts": {
    "test": "echo \"WARN: Tests not yet implemented!\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tombout/lump-grid.git"
  },
  "keywords": [
    "css",
    "scss",
    "grid"
  ],
  "author": "Thomas Schmitz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tombout/lump-grid/issues"
  },
  "homepage": "https://github.com/tombout/lump-grid#readme",
  "devDependencies": {
    "gulp": "^4.0.0",
    "gulp-sass": "^4.0.1",
    "gulp-stylelint": "^7.0.0",
    "sass-mq": "^5.0.0",
    "stylelint": "^9.3.0"
  },
  "stylelint": {
    "rules": {
      "block-no-empty": null,
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "stylelint-commands",
            "after-comment"
          ]
        }
      ],
      "declaration-colon-space-after": "always",
      "max-empty-lines": 1,
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "unit-whitelist": [
        "em",
        "rem",
        "%",
        "s"
      ]
    }
  }
}
